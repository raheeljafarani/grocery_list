<h2>Type of Shopping Lists</h2>

    <form action="/insert_list" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create list
      </button>
    </form>
