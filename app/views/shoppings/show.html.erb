<div>
  <div>
    <h1>
      Shopping #<%= @the_shopping.id %> details
    </h1>

    <div>
      <div>
        <a href="/shoppings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_shopping/<%= @the_shopping.id %>">
          Delete shopping
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_shopping.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_shopping.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_shopping.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit shopping
    </h2>

    <form action="/modify_shopping/<%= @the_shopping.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_shopping.name %>">
      </div>

      <button>
        Update shopping
      </button>
    </form>
  </div>
</div>

<hr>
